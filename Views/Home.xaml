<UserControl x:Class="Kozyrev_Hriha_SP.Views.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kozyrev_Hriha_SP.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600"
             d:DesignWidth="622">
    <Grid >
        <Border CornerRadius="0,20,20,0">

            <Border.Background>
                <ImageBrush ImageSource="/Resources/Images/home_page.png" Stretch="Fill"/>
            </Border.Background>

            <!-- Image as the first child -->
            <!-- TextBlock as the second child -->
            <TextBlock Text="Log in to see more"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Center"
                       Foreground="Aqua"                          
                       FontWeight="Bold"
                       FontSize="20"
                       Margin="15"    />

        </Border>
    </Grid>
</UserControl>
